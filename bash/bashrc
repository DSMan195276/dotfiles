# Swap caps_lock and left_control key -- This works for VT's
(echo "keymaps 0-2,4-6,8-9,12"; echo "keycode 58 = Control"; echo "keycode 29 = Caps_Lock") | sudo loadkeys -

if [ -n "$USE_COLORS" ]; then
  TERM=screen-256color
fi

ncolors=$(tput colors)
export EDITOR=vim

